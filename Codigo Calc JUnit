import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class CalculadoraApp.JUnit {

    @Test
    public void testSoma() {
        assertEquals(5.0, Calculadora.somar(2.0, 3.0));
    }

    @Test
    public void testSubtracao() {
        assertEquals(1.0, Calculadora.subtrair(4.0, 3.0));
    }

    @Test
    public void testMultiplicacao() {
        assertEquals(20.0, Calculadora.multiplicar(4.0, 5.0));
    }

    @Test
    public void testDivisao() {
        assertEquals(2.0, Calculadora.dividir(10.0, 5.0));
    }

    @Test
    public void testDivisaoPorZero() {
        assertThrows(ArithmeticException.class, () -> Calculadora.dividir(10.0, 0));
    }
}
